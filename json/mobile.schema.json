{
  "$schema": "http://json-schema.org/schema#",
  "title": "Mobile",
  "description": "Interface list",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Interface entity",
    "required": ["name"],
    "properties": {
        "name": {
          "type": "string",
          "description": "Interface name"
        },
        "enable": {
          "type": "bool",
          "description": "Enable cellulare interface"
        },
        "apn": {
          "type": "str",
          "description": "Access point name"
        },
        "username": {
          "type": "string",
          "description": "Username"
        },
        "password": {
          "type": "string",
          "description": "Password"
        },
        "mode": {
          "type": "select",      ["auto", "edge", "umts", "lte"],
          "Network access mode"
        },
        "bands": {
          "type": "multiselect", ["850", "900", "1800", "1900", "2100", "2600"],
          "Freq bands allowed"
        },
        "zone": {
          "type": "fwzone",
          "Firewall zone by default"
        },
      }
}
